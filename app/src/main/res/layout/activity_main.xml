<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f4f4"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="20dp">

        <!-- White Container Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:elevation="8dp"
            android:radius="10dp"
            android:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="30dp"
                android:gravity="center">

                <!-- Title -->
                <TextView
                    android:id="@+id/textTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tic Tac Toe"
                    android:textSize="28sp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:layout_marginBottom="15dp"/>

                <!-- Mode Toggle (PvP / PvC) -->
                <LinearLayout
                    android:id="@+id/modeToggle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/toggle_background"
                    android:layout_marginBottom="15dp">

                    <Button
                        android:id="@+id/btnPvP"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:text="PvP"
                        android:textSize="14sp"
                        android:textAllCaps="false"
                        android:background="@drawable/toggle_button_left"
                        android:textColor="#FFFFFF"
                        android:fontFamily="sans-serif-medium"/>

                    <Button
                        android:id="@+id/btnPvC"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:text="PvC"
                        android:textSize="14sp"
                        android:textAllCaps="false"
                        android:background="@drawable/toggle_button_right"
                        android:textColor="#007bff"
                        android:fontFamily="sans-serif-medium"/>
                </LinearLayout>

                <!-- Symbol Toggle (X / O) - Hidden by default -->
                <LinearLayout
                    android:id="@+id/symbolToggle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/toggle_background"
                    android:layout_marginBottom="15dp"
                    android:visibility="gone">

                    <Button
                        android:id="@+id/btnChooseX"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:text="X"
                        android:textSize="14sp"
                        android:textAllCaps="false"
                        android:background="@drawable/toggle_button_left"
                        android:textColor="#FFFFFF"
                        android:fontFamily="sans-serif-medium"/>

                    <Button
                        android:id="@+id/btnChooseO"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:text="O"
                        android:textSize="14sp"
                        android:textAllCaps="false"
                        android:background="@drawable/toggle_button_right"
                        android:textColor="#007bff"
                        android:fontFamily="sans-serif-medium"/>
                </LinearLayout>

                <!-- Scoreboard -->
                <LinearLayout
                    android:id="@+id/scoreboard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="15dp">

                    <TextView
                        android:id="@+id/textScoreX"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="X Wins: 0"
                        android:textSize="16sp"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:layout_marginEnd="30dp"/>

                    <TextView
                        android:id="@+id/textScoreO"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="O Wins: 0"
                        android:textSize="16sp"
                        android:textColor="#000000"
                        android:textStyle="bold"/>
                </LinearLayout>

                <!-- Game Board -->
                <GridLayout
                    android:id="@+id/gridLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:columnCount="3"
                    android:rowCount="3"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp">

                    <!-- Row 0 -->
                    <Button
                        android:id="@+id/btn00"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:layout_margin="3dp"
                        android:textSize="32sp"
                        android:textColor="#000000"
                        android:background="@drawable/cell_background"
                        android:textStyle="bold"/>

                    <Button
                        android:id="@+id/btn01"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:layout_margin="3dp"
                        android:textSize="32sp"
                        android:textColor="#000000"
                        android:background="@drawable/cell_background"
                        android:textStyle="bold"/>

                    <Button
                        android:id="@+id/btn02"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:layout_margin="3dp"
                        android:textSize="32sp"
                        android:textColor="#000000"
                        android:background="@drawable/cell_background"
                        android:textStyle="bold"/>

                    <!-- Row 1 -->
                    <Button
                        android:id="@+id/btn10"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:layout_margin="3dp"
                        android:textSize="32sp"
                        android:textColor="#000000"
                        android:background="@drawable/cell_background"
                        android:textStyle="bold"/>

                    <Button
                        android:id="@+id/btn11"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:layout_margin="3dp"
                        android:textSize="32sp"
                        android:textColor="#000000"
                        android:background="@drawable/cell_background"
                        android:textStyle="bold"/>

                    <Button
                        android:id="@+id/btn12"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:layout_margin="3dp"
                        android:textSize="32sp"
                        android:textColor="#000000"
                        android:background="@drawable/cell_background"
                        android:textStyle="bold"/>

                    <!-- Row 2 -->
                    <Button
                        android:id="@+id/btn20"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:layout_margin="3dp"
                        android:textSize="32sp"
                        android:textColor="#000000"
                        android:background="@drawable/cell_background"
                        android:textStyle="bold"/>

                    <Button
                        android:id="@+id/btn21"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:layout_margin="3dp"
                        android:textSize="32sp"
                        android:textColor="#000000"
                        android:background="@drawable/cell_background"
                        android:textStyle="bold"/>

                    <Button
                        android:id="@+id/btn22"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:layout_margin="3dp"
                        android:textSize="32sp"
                        android:textColor="#000000"
                        android:background="@drawable/cell_background"
                        android:textStyle="bold"/>

                </GridLayout>

                <!-- Status Text -->
                <TextView
                    android:id="@+id/textStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Player X's turn"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="15dp"/>

                <!-- Restart Button -->
                <Button
                    android:id="@+id/btnRestart"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:paddingStart="25dp"
                    android:paddingEnd="25dp"
                    android:text="Restart Game"
                    android:textSize="15sp"
                    android:textAllCaps="false"
                    android:background="@drawable/restart_button"
                    android:textColor="#007bff"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginTop="15dp"/>

                <!-- Footer -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginTop="25dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Built by gorguludg"
                        android:textSize="13sp"
                        android:textColor="#555555"
                        android:layout_marginBottom="5dp"/>

                    <TextView
                        android:id="@+id/textGitHub"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="View Source on GitHub"
                        android:textSize="13sp"
                        android:textColor="#007bff"
                        android:textStyle="bold"
                        android:clickable="true"
                        android:focusable="true"/>
                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>