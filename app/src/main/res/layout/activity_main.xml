<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background">

    <!-- App Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/primary"
        android:padding="20dp"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tic Tac Toe"
            android:textSize="24sp"
            android:textColor="@color/header_text"
            android:textStyle="bold"/>
    </LinearLayout>

    <!-- Main Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="24dp">

        <!-- Mode Toggle -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/toggle_background"
            android:padding="4dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/btnPvP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2 Players"
                android:textSize="14sp"
                android:textStyle="bold"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:background="@drawable/toggle_item_active"
                android:textColor="@color/black"
                android:clickable="true"
                android:focusable="true"/>

            <TextView
                android:id="@+id/btnPvC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="vs Computer"
                android:textSize="14sp"
                android:textStyle="bold"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:background="@drawable/toggle_item_inactive"
                android:textColor="@color/toggle_inactive_text"
                android:clickable="true"
                android:focusable="true"/>
        </LinearLayout>

        <!-- Symbol Toggle (Hidden by default) -->
        <LinearLayout
            android:id="@+id/symbolToggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/toggle_background"
            android:padding="4dp"
            android:layout_marginBottom="16dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/btnChooseX"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Play as X"
                android:textSize="14sp"
                android:textStyle="bold"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:background="@drawable/toggle_item_active"
                android:textColor="@color/black"
                android:clickable="true"
                android:focusable="true"/>

            <TextView
                android:id="@+id/btnChooseO"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Play as O"
                android:textSize="14sp"
                android:textStyle="bold"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:background="@drawable/toggle_item_inactive"
                android:textColor="@color/toggle_inactive_text"
                android:clickable="true"
                android:focusable="true"/>
        </LinearLayout>

        <!-- Scoreboard -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:paddingStart="24dp"
                android:paddingEnd="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="X"
                    android:textSize="20sp"
                    android:textColor="@color/player_x"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/textScoreX"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="28sp"
                    android:textColor="@color/player_x"
                    android:textStyle="bold"/>
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="50dp"
                android:background="@color/cell_background"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:paddingStart="24dp"
                android:paddingEnd="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="O"
                    android:textSize="20sp"
                    android:textColor="@color/player_o"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/textScoreO"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="28sp"
                    android:textColor="@color/player_o"
                    android:textStyle="bold"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Game Board -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="24dp">

            <!-- Row 0 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/btn00"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="4dp"
                    android:gravity="center"
                    android:textSize="48sp"
                    android:textStyle="bold"
                    android:background="@drawable/cell_background"
                    android:clickable="true"
                    android:focusable="true"/>

                <TextView
                    android:id="@+id/btn01"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="4dp"
                    android:gravity="center"
                    android:textSize="48sp"
                    android:textStyle="bold"
                    android:background="@drawable/cell_background"
                    android:clickable="true"
                    android:focusable="true"/>

                <TextView
                    android:id="@+id/btn02"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="4dp"
                    android:gravity="center"
                    android:textSize="48sp"
                    android:textStyle="bold"
                    android:background="@drawable/cell_background"
                    android:clickable="true"
                    android:focusable="true"/>
            </LinearLayout>

            <!-- Row 1 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/btn10"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="4dp"
                    android:gravity="center"
                    android:textSize="48sp"
                    android:textStyle="bold"
                    android:background="@drawable/cell_background"
                    android:clickable="true"
                    android:focusable="true"/>

                <TextView
                    android:id="@+id/btn11"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="4dp"
                    android:gravity="center"
                    android:textSize="48sp"
                    android:textStyle="bold"
                    android:background="@drawable/cell_background"
                    android:clickable="true"
                    android:focusable="true"/>

                <TextView
                    android:id="@+id/btn12"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="4dp"
                    android:gravity="center"
                    android:textSize="48sp"
                    android:textStyle="bold"
                    android:background="@drawable/cell_background"
                    android:clickable="true"
                    android:focusable="true"/>
            </LinearLayout>

            <!-- Row 2 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/btn20"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="4dp"
                    android:gravity="center"
                    android:textSize="48sp"
                    android:textStyle="bold"
                    android:background="@drawable/cell_background"
                    android:clickable="true"
                    android:focusable="true"/>

                <TextView
                    android:id="@+id/btn21"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="4dp"
                    android:gravity="center"
                    android:textSize="48sp"
                    android:textStyle="bold"
                    android:background="@drawable/cell_background"
                    android:clickable="true"
                    android:focusable="true"/>

                <TextView
                    android:id="@+id/btn22"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="4dp"
                    android:gravity="center"
                    android:textSize="48sp"
                    android:textStyle="bold"
                    android:background="@drawable/cell_background"
                    android:clickable="true"
                    android:focusable="true"/>
            </LinearLayout>

        </LinearLayout>

        <!-- Status Text -->
        <TextView
            android:id="@+id/textStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="X's turn"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginBottom="24dp"/>

        <!-- New Game Button -->
        <TextView
            android:id="@+id/btnRestart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Game"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:background="@drawable/button_primary"
            android:paddingStart="32dp"
            android:paddingEnd="32dp"
            android:paddingTop="14dp"
            android:paddingBottom="14dp"
            android:clickable="true"
            android:focusable="true"/>

    </LinearLayout>

</LinearLayout>