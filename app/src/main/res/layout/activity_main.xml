<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/light_background">

    <!-- App Header -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/primary"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="16dp">

        <!-- Spacer for status bar -->
        <View
            android:layout_width="match_parent"
            android:layout_height="32dp"/>

        <!-- Title and Toggle Row -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Tic Tac Toe"
                android:textSize="22sp"
                android:textColor="@color/black"
                android:textStyle="bold"/>

            <!-- Theme Toggle -->
            <LinearLayout
                android:id="@+id/themeToggle"
                android:layout_width="56dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@drawable/theme_toggle_track"
                android:gravity="center_vertical"
                android:paddingStart="2dp"
                android:paddingEnd="2dp"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:id="@+id/themeIcon"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:background="@drawable/theme_toggle_thumb"
                    android:gravity="center"
                    android:text="☀️"
                    android:textSize="14sp"/>
            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

    <!-- Main Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="24dp">

        <!-- Toggle Row (Mode + Symbol side by side) -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="14dp">

            <!-- Mode Toggle -->
            <LinearLayout
                android:id="@+id/modeToggleContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/toggle_background"
                android:padding="4dp">

                <TextView
                    android:id="@+id/btnPvP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2 Players"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:paddingStart="14dp"
                    android:paddingEnd="14dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:background="@drawable/toggle_item_active"
                    android:textColor="@color/black"
                    android:clickable="true"
                    android:focusable="true"/>

                <TextView
                    android:id="@+id/btnPvC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="vs AI"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:paddingStart="14dp"
                    android:paddingEnd="14dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:background="@drawable/toggle_item_inactive"
                    android:textColor="@color/toggle_inactive_text"
                    android:clickable="true"
                    android:focusable="true"/>
            </LinearLayout>

            <!-- Symbol Toggle (Hidden by default) -->
            <LinearLayout
                android:id="@+id/symbolToggle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/toggle_background"
                android:padding="4dp"
                android:layout_marginStart="10dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/btnChooseX"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="X"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:background="@drawable/toggle_item_active"
                    android:textColor="@color/black"
                    android:clickable="true"
                    android:focusable="true"/>

                <TextView
                    android:id="@+id/btnChooseO"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="O"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:background="@drawable/toggle_item_inactive"
                    android:textColor="@color/toggle_inactive_text"
                    android:clickable="true"
                    android:focusable="true"/>
            </LinearLayout>

        </LinearLayout>

        <!-- New Scoreboard Design -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp"
            android:gravity="center">

            <!-- X Score Card -->
            <LinearLayout
                android:id="@+id/scoreCardX"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/score_card_x"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Player X"
                    android:textSize="12sp"
                    android:textColor="@color/score_x_text"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/textScoreX"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="36sp"
                    android:textColor="@color/score_x_text"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="wins"
                    android:textSize="11sp"
                    android:textColor="@color/score_x_text"/>
            </LinearLayout>

            <!-- VS Divider -->
            <TextView
                android:id="@+id/textVs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VS"
                android:textSize="16sp"
                android:textColor="@color/light_text_secondary"
                android:textStyle="bold"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"/>

            <!-- O Score Card -->
            <LinearLayout
                android:id="@+id/scoreCardO"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/score_card_o"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Player O"
                    android:textSize="12sp"
                    android:textColor="@color/score_o_text"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/textScoreO"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="36sp"
                    android:textColor="@color/score_o_text"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="wins"
                    android:textSize="11sp"
                    android:textColor="@color/score_o_text"/>
            </LinearLayout>

        </LinearLayout>

        <!-- Game Board -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="20dp">

            <!-- Row 0 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/btn00"
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:layout_margin="4dp"
                    android:gravity="center"
                    android:textSize="44sp"
                    android:textStyle="bold"
                    android:textColor="@color/light_text"
                    android:background="@drawable/cell_background"
                    android:clickable="true"
                    android:focusable="true"/>

                <TextView
                    android:id="@+id/btn01"
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:layout_margin="4dp"
                    android:gravity="center"
                    android:textSize="44sp"
                    android:textStyle="bold"
                    android:textColor="@color/light_text"
                    android:background="@drawable/cell_background"
                    android:clickable="true"
                    android:focusable="true"/>

                <TextView
                    android:id="@+id/btn02"
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:layout_margin="4dp"
                    android:gravity="center"
                    android:textSize="44sp"
                    android:textStyle="bold"
                    android:textColor="@color/light_text"
                    android:background="@drawable/cell_background"
                    android:clickable="true"
                    android:focusable="true"/>
            </LinearLayout>

            <!-- Row 1 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/btn10"
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:layout_margin="4dp"
                    android:gravity="center"
                    android:textSize="44sp"
                    android:textStyle="bold"
                    android:textColor="@color/light_text"
                    android:background="@drawable/cell_background"
                    android:clickable="true"
                    android:focusable="true"/>

                <TextView
                    android:id="@+id/btn11"
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:layout_margin="4dp"
                    android:gravity="center"
                    android:textSize="44sp"
                    android:textStyle="bold"
                    android:textColor="@color/light_text"
                    android:background="@drawable/cell_background"
                    android:clickable="true"
                    android:focusable="true"/>

                <TextView
                    android:id="@+id/btn12"
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:layout_margin="4dp"
                    android:gravity="center"
                    android:textSize="44sp"
                    android:textStyle="bold"
                    android:textColor="@color/light_text"
                    android:background="@drawable/cell_background"
                    android:clickable="true"
                    android:focusable="true"/>
            </LinearLayout>

            <!-- Row 2 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/btn20"
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:layout_margin="4dp"
                    android:gravity="center"
                    android:textSize="44sp"
                    android:textStyle="bold"
                    android:textColor="@color/light_text"
                    android:background="@drawable/cell_background"
                    android:clickable="true"
                    android:focusable="true"/>

                <TextView
                    android:id="@+id/btn21"
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:layout_margin="4dp"
                    android:gravity="center"
                    android:textSize="44sp"
                    android:textStyle="bold"
                    android:textColor="@color/light_text"
                    android:background="@drawable/cell_background"
                    android:clickable="true"
                    android:focusable="true"/>

                <TextView
                    android:id="@+id/btn22"
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:layout_margin="4dp"
                    android:gravity="center"
                    android:textSize="44sp"
                    android:textStyle="bold"
                    android:textColor="@color/light_text"
                    android:background="@drawable/cell_background"
                    android:clickable="true"
                    android:focusable="true"/>
            </LinearLayout>

        </LinearLayout>

        <!-- Status Text -->
        <TextView
            android:id="@+id/textStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="X's turn"
            android:textSize="18sp"
            android:textColor="@color/light_text"
            android:textStyle="bold"
            android:layout_marginBottom="20dp"/>

        <!-- New Game Button -->
        <TextView
            android:id="@+id/btnRestart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Game"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:background="@drawable/button_primary"
            android:paddingStart="32dp"
            android:paddingEnd="32dp"
            android:paddingTop="14dp"
            android:paddingBottom="14dp"
            android:gravity="center"
            android:textAlignment="center"
            android:clickable="true"
            android:focusable="true"/>

    </LinearLayout>

</LinearLayout>